{% extends 'MVNerdsLaunchSiteBundle::layout.html.twig' %}

{% block css %}
	{{ parent() }}

	<link href="{{ asset('css/launch_site/forgot-password.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block header_footer %}
	<div class="presentation-container">
		<div class="content">
			<div class="overview custom summoner-forgot-password">
				<h1>Choisissez votre nouveau mot de passe</h1>
								
				<div class="error">
					{% if form.vars.errors|length > 0 %}
						{% include ':Form:render_form_errors.html.twig' with {'item': form} %}
					{% endif %}
					{% include ':Form:render_form_errors.html.twig' with {'item': form.password} %}
					{% include ':Form:render_form_errors.html.twig' with {'item': form.passwordConfirm} %}
				</div>
				
				<form action="{{ path('launch_site_reset_password_save') }}" method="POST" {{ form_enctype(form) }}>
					<div class="row-fluid">
						<div class="span4">
							{{ form_label(form.password) }}
						</div>
						<div class="span4">
							{{ form_widget(form.password) }}
						</div>
						<div class="span4">
							
						</div>
					</div>
					
					<div class="row-fluid">
						<div class="span4">
							{{ form_label(form.passwordConfirm) }}
						</div>
						<div class="span4">
							{{ form_widget(form.passwordConfirm) }}
						</div>
						<div class="span4">
							<button>Envoyer</button>
						</div>
					</div>
				
					{{ form_rest(form) }}
				</form>
			</div>
		</div>
	</div>
	<div class="clearfix"></div>
{% endblock %}