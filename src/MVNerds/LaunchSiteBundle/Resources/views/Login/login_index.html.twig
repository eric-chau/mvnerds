{% extends 'MVNerdsLaunchSiteBundle::layout.html.twig' %}
	
{% block header_footer %}
	<div class="presentation-container">
		<div class="content">
			<div class="overview custom">
				<h1>Authentification de l'invocateur</h1>

				{% if error %}
					<div>{{ error.message }}</div>
				{% endif %}

				<form action="{{ path('security_summoner_login_check') }}" method="post">
					<label for="username">Identifiant d'invocateur :</label>
					<input type="text" id="username" name="_username" value="{{ last_username }}" />

					<label for="password">Mot de passe :</label>
					<input type="password" id="password" name="_password" />

					<input type="hidden" name="_target_path" value="/profile" />

					<button type="submit">login</button>
				</form>
			</div>
		</div>
	</div>
	<div class="clearfix"></div>
{% endblock %}