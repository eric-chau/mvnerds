{% extends 'MVNerdsLaunchSiteBundle::layout.html.twig' %}
	
{% block header_footer %}
	<div class="presentation-container">
		<div class="content">
			<div class="overview custom">
				<h1>{{'account_activation_fail.h1'|trans}}</h1>

				{% if user is not defined %}
					<p>
						{{'account_activation_fail.p1'|trans({'%slug%':('<strong>'~slug~'</strong>'),'%activationcode%':('<strong>'~activation_code~'</strong>') })|raw}}
					</p>

					<p>
						{{'account_activation_fail.p2'|trans}}
					</p>
				{% else %}
					<p>
						{{'account_activation_fail.p3'|trans({'%username%':user.getUserName()})}}
					</p>
				{% endif %}
				<p>
					{{'account_activation_fail.p4'|trans}}
				</p>
			</div>
		</div>
	</div>
	<div class="clearfix"></div>
{% endblock %}