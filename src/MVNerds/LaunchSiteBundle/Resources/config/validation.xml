<?xml version="1.0" encoding="UTF-8" ?><constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"					xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"					xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">	<class name="MVNerds\LaunchSiteBundle\Form\Model\SummonerModel">		<!-- USERNAME -->		<property name="username">			<constraint name="NotBlank">				<option name="message">Validation.User.username.not_blank</option>			</constraint>		</property>		<!-- PASSWORD -->		<property name="password">			<constraint name="NotBlank">				<option name="message">Validation.User.password.not_blank</option>			</constraint>		</property>		<!-- PASSWORD CONFIRM -->		<property name="passwordConfirm">			<constraint name="NotBlank">				<option name="message">Validation.User.password_confirm.not_blank</option>			</constraint>		</property>		<getter property="passwordMatching">			<constraint name="True">				<option name="message">Validation.User.password.miss_match</option>			</constraint>		</getter>				<!-- EMAIL -->		<property name="email">			<constraint name="NotBlank">				<option name="message">Validation.User.email.not_blank</option>			</constraint>			<constraint name="Email">				<option name="message">Validation.User.email.invalid</option>			</constraint>		</property>		<getter property="emailAlreadyInUse">			<constraint name="False">				<option name="message">Validation.User.email.already_in_use</option>			</constraint>		</getter>	</class>	<class name="MVNerds\LaunchSiteBundle\Form\Model\ForgotPasswordModel">				<!-- EMAIL -->		<property name="email">			<constraint name="NotBlank">				<option name="message">Validation.User.email.not_blank</option>			</constraint>			<constraint name="Email">				<option name="message">Validation.User.email.invalid</option>			</constraint>		</property>		<getter property="emailAlreadyInUse">			<constraint name="True">				<option name="message">Validation.ForgotPassword.email.does_not_exist</option>			</constraint>		</getter>		<getter property="userAccountActivated">			<constraint name="True">				<option name="message">Validation.ForgotPassword.account.not_activated</option>			</constraint>		</getter>	</class>	<class name="MVNerds\LaunchSiteBundle\Form\Model\ResetPasswordModel">		<!-- PASSWORD -->		<property name="password">			<constraint name="NotBlank">				<option name="message">Validation.User.password.not_blank</option>			</constraint>		</property>		<!-- PASSWORD CONFIRM -->		<property name="passwordConfirm">			<constraint name="NotBlank">				<option name="message">Validation.User.password_confirm.not_blank</option>			</constraint>		</property>		<getter property="passwordMatching">			<constraint name="True">				<option name="message">Validation.User.password.miss_match</option>			</constraint>		</getter>	</class></constraint-mapping>