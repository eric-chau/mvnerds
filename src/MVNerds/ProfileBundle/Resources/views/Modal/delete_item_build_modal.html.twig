<div id="delete-build-{{ item_build.getSlug() }}-modal" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3>{{ 'profile_index.pmri.delete_modal.title'|trans }}</h3>
	</div>
	<div class="modal-body">
		<p>{{ 'profile_index.pmri.delete_modal.text.1'|trans }} <strong>{{ item_build.getName() }}</strong>. {{ 'profile_index.pmri.delete_modal.text.2'|trans }}</p>
	</div>
	<div class="modal-footer">
		<a href="#" data-dismiss="modal" class="btn">{{ 'profile_index.pmri.delete_modal.cancel_btn'|trans }}</a>
		<a href="{{ path('item_builder_delete_build', {'itemBuildSlug': item_build.getSlug()}) }}" class="btn red btn-download">{{ 'profile_index.pmri.delete_modal.confirm_btn'|trans }}</a>
	</div>
</div>