<div class="block">
	<div class="header">
		<h3><i class="icon-comments-alt"></i> Mes derniers commentaires</h3>
	</div>
	<div class="body">
		{% for comment in comments %}
			<div class="last-comment-row">
				<p><i class="icon-quote-left"></i> {{ comment.getContent()|nl2br }} <i class="icon-quote-right"></i></p>
				<div class="comment-infos">
					<div class="date">{% include ':Extension:custom_format_date.html.twig' with {'object': comment.getCreateTime()} %}</div>
					<div class="related-object-link">
						<a href="{{ path('profile_redirect_to_related_object', {'_locale': app.request.getLocale(), 'commentId': comment.getId() * 47}) }}">
							Voir 
							{% if comment.getObjectNamespace() == 'MVNerds\\CoreBundle\\Model\\ItemBuild' %}
								la liste liée
							{% elseif comment.getObjectNamespace() == 'MVNerds\\CoreBundle\\Model\\Video' %}
								la vidéo liée
							{% elseif comment.getObjectNamespace() == 'MVNerds\\CoreBundle\\Model\\News' %}
								la news liée
							{% elseif comment.getObjectNamespace() == 'MVNerds\\CoreBundle\\Model\\Champion' %}
								le champion lié
							{% endif %}
						</a>
					</div>
				</div>
			</div>
		{% else %}
			<p class="empty-list">{{ user.getUsername() }} n'a pas encore écrit de commentaire</p>
		{% endfor %}
	</div>
</div>