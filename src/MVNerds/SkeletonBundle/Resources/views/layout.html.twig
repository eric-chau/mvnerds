{% extends 'MVNerdsSkeletonBundle::base.html.twig' %}

{% block body %}
	<div class="container main-container">
		<div class="global-menu">
			<div class="fb-like" data-href="https://www.facebook.com/mvnerds" data-send="false" data-layout="button_count" data-width="450" data-show-faces="true"></div>
			
			<ul>
				<li><a href="#">Se connecter</a></li>
				<li><a href="#">S'enregistrer</a></li>
				<li><a href="#"><i class="icon-globe"></i>Français</a></li>
			</ul>
		</div>

		<div class="header">			
			<form action="#" method="post" id="search-by-tag-form">
				<img src="{{ asset('medias/images/skeleton/teemo-img.png') }}" class="teemo-img" />
				<a href="#" class="back-home-link"><img src="{{ asset('medias/images/site/mvnerds-logo.png') }}" /></a>
				
				<i class="icon-search"></i>
				<input type="text" class="search-by-tag-input" id="" placeholder="Rechercher par tag" />
				<button>Rechercher</button>
				<a href="#"><i class="icon-cogs"></i></a>
				
				<a href="#" class="post-feed-btn">POSTER UN <strong>feed</strong></a>
			</form>
		</div>
		
		<div class="feeds-container">
			<div class="row-fluid feed-row">
				<div class="span6 feed">
					<h2><div class="rating">0</div> Ajouter le bouton d'ajout de feed</h2>
				</div>
				<div class="span6 feed-infos">
					<p>
						<strong>Question</strong> [FR] postée par <a href="#">DyRusse</a> il y a <em>46 minutes</em> - 105 vues, 1 réponse.
					</p>
				</div>
			</div>
				
			<div class="row-fluid feed-row">
				<div class="span6 feed">
					<h2><div class="rating">0</div> Créer la page d'ajout de feed</h2>
				</div>
				<div class="span6 feed-infos">
					<p>
						<strong>Question</strong> [FR] postée par <a href="#">DyRusse</a> il y a <em>46 minutes</em> - 105 vues, 1 réponse. 
					</p>
				</div>
			</div>
				
			<div class="row-fluid feed-row">
				<div class="span6 feed red-post">
					<h2><div class="rating">11</div> Concevoir le système de notation d'un feed et d'un commentaire</h2>
				</div>
				<div class="span6 feed-infos">
					<p>
						<strong>Vidéo</strong> [FR] postée par <a href="#">Ro0ny</a> <em>hier à 22h09</em> - 301 vues, 18 réponses. 
					</p>
				</div>
			</div>
				
			<div class="row-fluid feed-row">
				<div class="span6 feed red-post">
					<h2><div class="rating">11</div> Créer le détail d'un feed</h2>
				</div>
				<div class="span6 feed-infos">
					<p>
						<strong>Vidéo</strong> [FR] postée par <a href="#">Ro0ny</a> <em>hier à 22h09</em> - 301 vues, 18 réponses. 
					</p>
				</div>
			</div>
				
			<div class="row-fluid feed-row">
				<div class="span6 feed red-post">
					<h2><div class="rating">11</div> Système de réputation à développer</h2>
				</div>
				<div class="span6 feed-infos">
					<p>
						<strong>Vidéo</strong> [FR] postée par <a href="#">Ro0ny</a> <em>hier à 22h09</em> - 301 vues, 18 réponses. 
					</p>
				</div>
			</div>
				
			<div class="row-fluid feed-row">
				<div class="span6 feed red-post">
					<h2><div class="rating">11</div> Mettre en place le système de filtrage</h2>
				</div>
				<div class="span6 feed-infos">
					<p>
						<strong>Vidéo</strong> [FR] postée par <a href="#">Ro0ny</a> <em>hier à 22h09</em> - 301 vues, 18 réponses. 
					</p>
				</div>
			</div>
		</div>
			
		<div class="support-us-container">
			<i class="icon-reply"></i>
			<a href="#" class="support-us-btn">Soutenir MVNerds</a>
			<a href="#" class="learn-more-btn">+</a>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}

	<div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/fr_FR/all.js#xfbml=1";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
{% endblock %}
