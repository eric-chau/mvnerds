<div class="row-fluid normal-line">
	<div class="span2">{{ role.getId() }}</div>
	<div class="span4">{{ role.getLabel() }}</div>
	<div class="span4">{{ role.getUniqueName() }}</div>
	<div class="span2">		
		{# Voir les détails concernant le rôle et ses assignations #}
		<a href="{{ path('admin_role_detail', {'id': role.getId()}) }}" class="tooltip-anchor" rel="tooltip" data-placement="top" data-original-title="Voir les assignations du rôle {{ role.getUniqueName() }}">
			<i class="icon-eye-open"></i>
		</a>
			
		{# Editer le rôle #}
		<a href="{{ path('admin_role_edit', {'id': role.getId()}) }}" class="tooltip-anchor" rel="tooltip" data-placement="top" data-original-title="Éditer">
			<i class="icon-edit"></i>
		</a>
		{# Supprimer le rôle #}
		<a href="#" class="tooltip-anchor" rel="tooltip" data-placement="top" data-original-title="Supprimer le rôle" data-toggle="modal" data-target="#delete-role-{{ role.getId() }}-modal">
			<i class="icon-remove"></i>
		</a>
	</div>
	
	<div id="delete-role-{{ role.getId() }}-modal" class="modal hide fade">
		<div class="modal-header">
	    	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    	<h3>Supprimer le rôle {{ role.getUniqueName() }}</h3>
	  	</div>
	  	<div class="modal-body">
	    	<p>Êtes-vous sûr de vouloir supprimer le rôle ayant comme nom unique <strong>{{ role.getUniqueName() }}</strong> ?</p>
	  	</div>
	  	<div class="modal-footer">
	  		<img src="{{ asset('medias/images/commons/loader16.gif') }}" class="hide"/>
	    	<a href="#" class="btn" data-dismiss="modal">Annuler</a>
	    	<a href="{{ path('admin_role_delete', {'id': role.getId()}) }}" class="btn btn-danger btn-confirm-delete">Confirmer</a>
	  	</div>
	</div>
</div>