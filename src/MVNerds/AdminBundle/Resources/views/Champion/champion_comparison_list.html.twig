{% if app.session.has('comparison_list') %}
	<div id="comparison-list" class="well" ondrop="drop(event)" ondragover="dragOver(event)" ondragenter="dragEnter(event)" ondragleave="dragLeave(event)">
		<ul class="nav nav-list">
			<li class="nav-header">Liste de comparaison</li>
			<li style="display:none"  id="comparison-list-loading"><img src="{{ asset('images/commons/loader16.gif') }}"/></li>
			{% if app.session.get('comparison_list') | length <= 0 %}
				<li class="indication"><i>Glissez et d√©posez des champions ici</i></li>
			{% endif %}
			{% for championSlug,champion in app.session.get('comparison_list') %}
				{% include 'MVNerdsAdminBundle:Champion:champion_comparison_row.html.twig' with {'champion': champion}%}
			{% endfor %}
		</ul>
		{% set listSize = app.session.get('comparison_list') | length%}
			
		{% if listSize >= 2 %}
			<a href="{{path('admin_champions_compare') }}" id="btn-compare" class="btn btn-success btn-block comparison-list-btn"><i class="icon-resize-small icon-white"></i> Comparer !</a>
			<a href="{{path('admin_champions_clean_comparison') }}" id="btn-clean" class="btn btn-info btn-block comparison-list-btn"><i class="icon-trash icon-white"></i> Vider !</a>
		{% elseif listSize >= 1 %}
			<a href="{{path('admin_champions_compare') }}" id="btn-compare" class="btn btn-success btn-block disabled comparison-list-btn"><i class="icon-resize-small icon-white"></i> Comparer !</a>
			<a href="{{path('admin_champions_clean_comparison') }}" id="btn-clean" class="btn btn-info btn-block comparison-list-btn"><i class="icon-trash icon-white"></i> Vider !</a>
		{% else %}
			<a href="{{path('admin_champions_compare') }}" id="btn-compare" class="btn btn-success btn-block disabled comparison-list-btn"><i class="icon-resize-small icon-white"></i> Comparer !</a>
			<a href="{{path('admin_champions_clean_comparison') }}" id="btn-clean" class="btn btn-info btn-block disabled comparison-list-btn"><i class="icon-trash icon-white"></i> Vider !</a>
		{% endif %}
	</div>
{% endif %}