{% if app.session.has('comparison_list') %}
	<div id="comparison-list" class="well">
		<ul class="nav nav-list">
			<li class="nav-header">Liste de comparaison</li>
			{% for championSlug,champion in app.session.get('comparison_list') %}
				{% include 'MVNerdsAdminBundle:Champion:champion_comparison_row.html.twig' with {'champion': champion}%}
			{% else %}
				<i>Aucun champion dans la liste de comparaison.</i>
			{% endfor %}
			
			
		</ul>
		{% if app.session.get('comparison_list') | length >= 2 %}
			<a href="{{path('admin_champions_compare') }}" id="btn-compare" class="btn btn-success"><i class="icon-resize-small icon-white"></i> Comparer !</a>
			<a href="{{path('admin_champions_clean_comparison') }}" id="btn-compare" class="btn btn-info"><i class="icon-trash icon-white"></i> Vider !</a>
		{% else %}
			<i>Il faut au moins deux champions pour pouvoir effectuer une comparaison.</i>
		{% endif %}
	</div>
{% endif %}