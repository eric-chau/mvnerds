{% extends 'MVNerdsAdminBundle:User:layout.html.twig' %}

{% block title %}Administration des utilisateurs - MVNerds{% endblock %}

{% block content %}
	<h1>Ajouter un utilisateur</h1>

	<div class="action-buttons">
		<a href="{{ path('admin_users_index') }}" class="btn"><i class="icon-arrow-left"></i> <strong>Retourner à la liste</strong></a>
		<a href="#" class="btn btn-success btn-large pull-right btn-submit-form"><i class="icon-ok icon-white"></i> <strong>J'ai terminé</strong></a>
		<a href="{{ path('admin_users_index') }}" class="btn pull-right btn-danger"><strong>Annuler</strong></a>
	</div>

	<div class="content-container">
		<form action="{{ path('admin_users_add') }}" method="POST" {{ form_enctype(form) }}>
			{% if form.vars.errors|length > 0 %}
				<div class="alert alert-error">
					{% include '::render_form_errors.html.twig' with {'item': form} %}
				</div>
			{% endif %}
			
			<div class="row-fluid">
				<div class="span3">
					{{ form_label(form.email) }}
				</div>
				<div class="span4">
					{{ form_widget(form.email) }}
				</div>
				<div class="span5 span-errors">
					{% include '::render_form_errors.html.twig' with {'item': form.email} %}
				</div>
			</div>
				
			{{ form_rest(form) }}

			<input type="submit" class="submit-form hide" />
		</form>
	</div>
{% endblock %}