{% for  new in news %}
	<div class="item">
		<a href="{{path('news_detail', {'slug': new.getSlug()} )}}"><img src="{{asset('images/news/' ~ new.getImageName())}}" alt="image de la news : {{new.getTitle()}}"></a>
		<div class="carousel-caption">
			<h4 class="header">
				<a href="{{path('news_detail', {'slug': new.getSlug()} )}}">{{new.getTitle()}}</a>
				<em>{{'news_carousel.title.by'|trans}} <a href="{{ path('summoner_profile_view', {'userSlug': new.getUser().getSlug()}) }}" title="Consulter le profil de {{ new.getUser().getUsername }}"">{{new.getUser().getUsername()}}</a> {{'news_carousel.title.the'|trans}} {{new.getCreateTime('d/m/Y')}} {{'news_carousel.title.at'|trans}} {{new.getCreateTime('H:i')}}</em>
				<span class="comment-counter">{{ new.getCommentCount() }} <i class="icon-comment"></i></span>
			</h4>
				
			<p class="preview">{{ new.getPreview() }}</p>
		</div>
	</div>
{% endfor %}
