<div id="news-carousel-container" class="span8">
	<div class="row-fluid">
		<h2 class="span9">Most Valuable News</h2> <a href="{{path('front_news_list')}}" class="pull-right btn-green">{{'carousel_index.btn.all_news'|trans}}</a>
	</div>
		
	<div id="news-carousel" class="carousel slide">
		<div class="carousel-inner">
			{% include 'MVNerdsNewsBundle:Front:carousel_item.html.twig' with {'news': news} %}
		</div>
		<a class="left carousel-control" href="#news-carousel" data-slide="prev">‹</a>
		<a class="right carousel-control" href="#news-carousel" data-slide="next">›</a>
	</div>
</div>

<script type="text/javascript">
	$(function(){
		$('.carousel').carousel({interval:5000});
		$('#news-carousel div.carousel-inner div.item').first().addClass('active');
	});
</script>