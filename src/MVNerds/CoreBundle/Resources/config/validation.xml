<?xml version="1.0" encoding="UTF-8" ?><constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"					xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"					xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">	<class name="MVNerds\CoreBundle\Model\User">		<property name="email">			<constraint name="NotBlank">				<option name="message">Validation.User.email.not_blank</option>			</constraint>			<constraint name="Email">				<option name="message">Validation.User.email.invalid</option>			</constraint>		</property>		<getter property="emailAlreadyInUse">			<constraint name="False">				<option name="message">Validation.User.email.already_in_use</option>			</constraint>		</getter>		<getter property="validDomain">			<constraint name="False">				<option name="message">Validation.User.email.not_valid_domain</option>			</constraint>		</getter>	</class>	<class name="MVNerds\CoreBundle\Model\Role">		<property name="label">			<constraint name="NotBlank">				<option name="message">Validation.Role.label.not_blank</option>			</constraint>		</property>		<property name="unique_name">			<constraint name="NotBlank">				<option name="message">Validation.Role.uniqueName.not_blank</option>			</constraint>		</property>		<getter property="uniqueNameAlreadyInUse">			<constraint name="False">				<option name="message">Validation.Role.uniqueName.already_in_use</option>			</constraint>		</getter>	</class></constraint-mapping>