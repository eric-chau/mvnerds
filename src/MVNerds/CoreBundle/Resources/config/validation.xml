<?xml version="1.0" encoding="UTF-8" ?><constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"					xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"					xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">	<class name="MVNerds\CoreBundle\Model\User">		<property name="email">			<constraint name="NotBlank">				<option name="message">Validation.User.email.not_blank</option>			</constraint>			<constraint name="Email">				<option name="message">Validation.User.email.invalid</option>			</constraint>		</property>		<getter property="emailAlreadyInUse">			<constraint name="False">				<option name="message">Validation.User.email.already_in_use</option>			</constraint>		</getter>	</class></constraint-mapping>