{% extends 'MVNerdsSiteBundle::layout.html.twig' %}

{% block title %}Champion Benchark - {{ 'champion_benckmark.title'|trans }} | MVNerds{% endblock %} 

{% block css %}
	{{ parent() }}

	<link rel="stylesheet" type="text/css" href="{{ asset('medias/css/champion-benchmark/champion-benchmark-index.css') }}">
{% endblock %}

{% block javascripts %}
	{{ parent() }}

	<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
	{% if app.environment == 'dev' %}
		<script type="text/javascript" src="{{ asset('medias/js/bootstrap/bootstrap-tooltip.js') }}"></script>
		<script type="text/javascript" src="{{ asset('medias/js/bootstrap/bootstrap-popover.js') }}"></script>
		<script type="text/javascript" src="{{ asset('medias/js/jquery.isotope.min.js') }}"></script>
		<script type="text/javascript" src="{{ asset('medias/js/guiders-1.2.8.js') }}"></script>
		<script type="text/javascript" src="{{ asset('medias/js/site/isotope-filter.js') }}"></script>
		<script type="text/javascript" src="{{ asset('medias/js/site/alerts-ajax-handler.js') }}"></script>
		<script type="text/javascript" src="{{ asset('medias/js/champion-benchmark/champion-benchmark-index.js') }}"></script>
		<script type="text/javascript" src="{{ asset('medias/js/champion-benchmark/process-scroll.js')}}"></script>
		<script type="text/javascript" src="{{ asset('medias/js/champion-benchmark/shortcut.js')}}"></script>
		<script type="text/javascript" src="{{ asset('medias/js/champion-benchmark/common-guide-tour.js')}}"></script>
	{% else %}
		{% javascripts
			'medias/js/bootstrap/bootstrap-tooltip.js'
			'medias/js/bootstrap/bootstrap-popover.js'
			'medias/js/jquery.isotope.min.js'
			'medias/js/guiders-1.2.8.js'
			'medias/js/site/isotope-filter.js'
			'medias/js/site/alerts-ajax-handler.js'
			'medias/js/champion-benchmark/champion-benchmark-index.js'
			'medias/js/champion-benchmark/process-scroll.js'
			'medias/js/champion-benchmark/shortcut.js'
			'medias/js/champion-benchmark/common-guide-tour.js'
			'medias/js/champion-benchmark/guide-tour.js'
			'medias/js/champion-benchmark/guide-tour-fr.js'
			output='medias/js/compiled/champion-benchmark-index.js'
			filter='yui_js'
		%}
		<script src="{{ asset_url }}"></script>
		{% endjavascripts %}
	{% endif %}
		
	{% if locale == 'fr' %}
		<script type="text/javascript" src="{{ asset('medias/js/champion-benchmark/guide-tour-fr.js')}}"></script>
	{% else %}
		<script type="text/javascript" src="{{ asset('medias/js/champion-benchmark/guide-tour.js')}}"></script>		
	{% endif %}
{% endblock %}

{% block topbar %}
	{% set module = 'champion_benchmark' %}
		
	{{ parent() }}
{% endblock %}
		
{% block breadcrumbs %}
	{{ parent() }}
	
	> <a href="{{ path('champion_benchmark_index') }}">Champion Benchmark</a>
{% endblock %}

{% block main_content %}
	<div class="container main-container border-top">
		<h1>Champion Benchmark <a href="#" class="how-it-works-toggle"><span class="label red">{{ 'champion_benckmark.how_it_work_label'|trans }}</span></a></h1>
		
		<div class="how-it-works hide">
			<p>
				{{ 'champion_benckmark.index.hiw_text'|trans }}
			</p>

			<div class="guide-tour-container">
				<a href="#" class="btn large green start-guide-tour-btn">{{ 'champion_benckmark.index.start_guide_tour_btn'|trans }}</a>
			</div>
			
			<div class="separator"></div>
		</div>
		
		{# PUBLICITÃ‰ #}
		{% include 'MVNerdsSiteBundle:Common:ad_728x90.html.twig' %}
		
		<div class="champion-benchmark-container">
			{% include 'MVNerdsChampionHandlerBundle:ActionBar:actionbar.html.twig' with {'is_comparison_page': false} %}

			<div id="champion-comparison">
				<div id="champion-comparison-center">
					<div id="champion-list">
						{% include 'MVNerdsChampionHandlerBundle:ChampionBenchmark:champion_benchmark_index_champion_grid.html.twig' %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
		