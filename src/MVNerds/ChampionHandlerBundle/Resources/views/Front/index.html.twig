{% extends 'MVNerdsLaunchSiteBundle::layout.html.twig' %}

{% block css %}
	{{ parent() }}

	{% if app.environment != 'dev' %}
		{% stylesheets 
			'css/bootstrap.css'
			'css/normalize.css'
			'css/main.css'
			'css/launch_site/front.css'
			'css/guide-tour.css'
			'css/launch_site/front-compare.css'
			'css/launch_site/data-scroll.css'
			'css/champion_handler/champion-square-sprite.css'
			'css/champion_handler/champion-portrait-sprite.css'
			'css/champion_handler/champion-square25-sprite.css'
			'css/champion_handler/champion-square36-sprite.css'
			output='css/compiled/champion-handler-main.css'
			filter='yui_css'
			filter='cssembed'
		%}
		<link rel="stylesheet" href="{{ asset_url }}" />
		{% endstylesheets %}
	{% else %}
		<link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
		<link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
		<link rel="stylesheet" href="{{ asset('css/main.css') }}">
		<link rel="stylesheet" href="{{ asset('css/launch_site/front.css') }}">
		<link rel="stylesheet" href="{{ asset('css/guide-tour.css') }}">
		<link rel="stylesheet" href="{{ asset('css/launch_site/front-compare.css') }}">
		<link rel="stylesheet" href="{{ asset('css/launch_site/data-scroll.css') }}">
		<link rel="stylesheet" href="{{ asset('css/champion_handler/champion-square-sprite.css') }}">
		<link rel="stylesheet" href="{{ asset('css/champion_handler/champion-portrait-sprite.css') }}">
		<link rel="stylesheet" href="{{ asset('css/champion_handler/champion-square25-sprite.css') }}">
		<link rel="stylesheet" href="{{ asset('css/champion_handler/champion-square36-sprite.css') }}">
	{% endif %}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	
	{% if app.environment != 'dev' %}
		{% javascripts
			'js/launch_site/front.js'
			'js/champion_handler/shortcut.js'
			'js/launch_site/alerts-ajax-handler.js'
			'js/launch_site/data-scroll.js'
			'js/champion_handler/sort.js'
			'js/champion_handler/common-guide-tour.js'
			output='js/compiled/champion-handler-main.js'
			filter='yui_js'
		%}
		<script src="{{ asset_url }}"></script>
		{% endjavascripts %}
	{% else %}
		<script type="text/javascript" src="{{ asset('js/launch_site/front.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/champion_handler/shortcut.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/launch_site/alerts-ajax-handler.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/launch_site/data-scroll.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/champion_handler/sort.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/champion_handler/common-guide-tour.js') }}"></script>
	{% endif %}
		
	{% if locale == 'fr' %}
		<script type="text/javascript" src="{{ asset('/js/champion_handler/guide-tour-fr.js') }}"></script>
	{% else %}
		<script type="text/javascript" src="{{ asset('/js/champion_handler/guide-tour.js') }}"></script>
	{% endif %}	
{% endblock %}
		
{% block title %}
	{% if page == 'champions'%}
		{{'champion_list.title'|trans}}
	{% elseif page == 'compare' %}
		{{'champions_benchmark.title'|trans}}
	{% endif %}
{% endblock %}
		
{% block body_main_content %}	
	<div class="body-container">
		<div class="champions-handler-container">
			{# Barre d'action du module des champions #}
			{% include 'MVNerdsChampionHandlerBundle:ActionBar:actionbar.html.twig' with {'page': page} %}

			<div class="content">
				<div id="champion-comparison">
					{% if page == 'champions'%}
						{{ render(controller('MVNerdsChampionHandlerBundle:Front:championComparison')) }}
					{% elseif page == 'compare' %}
						{% include 'MVNerdsChampionHandlerBundle:ChampionBenchmark:compare_index.html.twig' %}
					{% endif %}
				</div>
			</div>
		</div>
	</div>	
{% endblock %}
