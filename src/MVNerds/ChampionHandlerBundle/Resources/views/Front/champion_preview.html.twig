<div class="row-fluid">
	<div class="span6">
		<h3>{{ champion.getName() }}</h3>
		<h5>{{ champion.getTitle() }}</h5>
		<dl>
			<dt>{{'Champion_preview.stat.health'|trans}}</dt>
			<dd>{{ champion.getBaseHealth() }}</dd>
			<dt class="bonus">{{'Champion_preview.stat.bonus_per_level.label'|trans}}</dt>
			<dd class="bonus">{{ champion.getBonusHealthPerLevel() }}</dd>

			<dt>{{'Champion_preview.stat.health_regen'|trans}}</dt>
			<dd>{{ champion.getBaseHealthRegen() * 5 }}</dd>
			<dt class="bonus">{{'Champion_preview.stat.bonus_per_level.label'|trans}}</dt>
			<dd class="bonus">{{ champion.getBonusHealthRegenPerLevel() }}</dd>  

			<dt>{{'Champion_preview.stat.mana'|trans}}</dt>
			<dd>{{ champion.getBaseMana() }}</dd>	
			<dt class="bonus">{{'Champion_preview.stat.bonus_per_level.label'|trans}}</dt>
			<dd class="bonus">{{ champion.getBonusManaPerLevel() }}</dd>  

			<dt>{{'Champion_preview.stat.mana_regen'|trans}}</dt>
			<dd>{{ champion.getBaseManaRegen() * 5 }}</dd>
			<dt class="bonus">{{'Champion_preview.stat.bonus_per_level.label'|trans}}</dt>
			<dd class="bonus">{{ champion.getBonusManaRegenPerLevel() }}</dd>

			<dt>{{'Champion_preview.stat.armor'|trans}}</dt>
			<dd>{{ champion.getBaseArmor() }}</dd>
			<dt class="bonus">{{'Champion_preview.stat.bonus_per_level.label'|trans}}</dt>
			<dd class="bonus">{{ champion.getBonusArmorPerLevel() }}</dd>

			<dt>{{'Champion_preview.stat.magic_resist'|trans}}</dt>
			<dd>{{ champion.getBaseMagicResist() }}</dd>
			<dt class="bonus">{{'Champion_preview.stat.bonus_per_level.label'|trans}}</dt>
			<dd class="bonus">{{ champion.getBonusMagicResistPerLevel() }}</dd>

			<dt>{{'Champion_preview.stat.damage'|trans}}</dt>
			<dd>{{ champion.getBaseDamage() }}</dd>
			<dt class="bonus">{{'Champion_preview.stat.bonus_per_level.label'|trans}}</dt>
			<dd class="bonus">{{ champion.getBonusDamagePerLevel() }}</dd>

			<dt>{{'Champion_preview.stat.attack_speed'|trans}}</dt>
			<dd>{{ champion.getBaseAttackSpeed() }}</dd>
			<dt class="bonus">{{'Champion_preview.stat.bonus_per_level.label'|trans}}</dt>
			<dd class="bonus">{{ champion.getBonusAttackSpeedPerLevel() }}</dd>

			<dt>{{'Champion_preview.stat.range'|trans}}</dt>
			<dd>{{ champion.getAttackRange() }}</dd>

			<dt class="last-child">{{'Champion_preview.stat.movement_speed'|trans}}</dt>
			<dd>{{ champion.getMoveSpeed() }}</dd>
		</dl>

		<p class="indication">{{'Champion_preview.stat.indication.part1'|trans}} {{ champion.getName() }} {{'Champion_preview.stat.indication.part2'|trans}}</p>
	</div>
	<div class="span6 right-side">
		<button class="close" data-dissmiss="{{ champion.getSlug() }}">Ã—</button>
		<p>
			<img src="{{ asset('/images/commons/ip_logo.png') }}" /> {{ champion.getIpCost() }} {{'General.or'|trans}} <img src="{{ asset('/images/commons/rp_logo.png') }}" /> {{ champion.getRpCost() }}
		</p>
		<img src="{{ asset('/images/champions/portrait/' ~ champion.getSlug() ~ '.jpg') }}" class="portrait" />
	</div>
</div>