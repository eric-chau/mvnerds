<div class="comments-list">
	{% for comment in comments %}
		{% include 'MVNerdsCommentBundle:Common:comment_row.html.twig' %}
	{% else %}
		<div class="row-fluid">
			<div class="span2"></div>
			<div class="span8 no-comment">
				<p>{{ 'Comments.no_reactions'|trans }}</p>
			</div>
			<div class="span2"></div>
		</div>
	{% endfor %}
</div>

<div class="row-fluid more-comments-loader hide">
	<div class="span2"></div>
	<div class="span8">
		<p><img src="{{ asset('images/commons/loader32-bg-141414.gif') }}" /> {{ 'Comments.no_reactions'|trans }}</p>
	</div>
	<div class="span2"></div>
</div>