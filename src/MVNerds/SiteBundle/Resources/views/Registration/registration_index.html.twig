{% extends 'MVNerdsSiteBundle::layout.html.twig' %}

{% block title %}{{'registration.title' | trans }} | MVNerds{% endblock %}

{% block css %}
	{{ parent() }}

	<link href="{{ asset('medias/css/site/registration-index.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block topbar %}
	{% set module = 'registration' %}
		
	{{ parent() }}
{% endblock %}
		
{% block breadcrumbs %}
	{{ parent() }}
	
	> <a href="{{ path('site_summoner_registration') }}">{{'registration.breadcrumbs' | trans }}</a>
{% endblock %}

{% block main_content %}
	<div class="container main-container border-top">
		<div class="row-fluid">
			<div class="span8 left-content">
				<h1>{{'registration.h1' | trans }}</h1>
				
				{# PUBLICITÉ #}
				{% include 'MVNerdsSiteBundle:Common:ad_468x60.html.twig' %}
				
				<p>
					{{'registration.p1' | trans }}
				</p>
				<ul>
					<li class="title">{{'registration.li1' | trans }}</li>
					<li>{{'registration.li2' | trans }}</li>
					<li>{{'registration.li3' | trans }}</li>
					<li>{{'registration.li4' | trans }}</li>
					<li class="title">{{'registration.li5' | trans }}</li>
					<li>{{'registration.li6' | trans }}</li>
					<li>{{'registration.li7' | trans }}</li>
					<li class="title">{{'registration.li8' | trans }}</li>
					<li>{{'registration.li9' | trans }}</li>
					<li>{{'registration.li10' | trans }}</li>
				</ul>
				
				<form action="{{ path('site_summoner_registration') }}" method="POST" {{ form_enctype(form) }}>
					<div class="form-errors">
						{{ form_errors(form) }}
					</div>
						
					<div class="field">
						{{ form_label(form.username) }}
						{{ form_widget(form.username) }}
						{{ form_errors(form.username) }}
					</div>
					
					<div class="field">
						{{ form_label(form.password) }}
						{{ form_widget(form.password) }}
						{{ form_errors(form.password) }}
					</div>
					
					<div class="field">
						{{ form_label(form.passwordConfirm) }}
						{{ form_widget(form.passwordConfirm) }}
						{{ form_errors(form.passwordConfirm) }}
					</div>
					
					<div class="field">
						{{ form_label(form.email) }}
						{{ form_widget(form.email) }}
						{{ form_errors(form.email) }}
					</div>
						
					{{ form_rest(form) }}
					
					<button class="btn large green">{{'registration.register' | trans }}</button>
				</form>
			</div>
			
			<div class="span4 right-content">
				
				{% include 'MVNerdsSiteBundle:Registration:why_register.html.twig' %}
				
				{# PUBLICITÉ #}
				{% include 'MVNerdsSiteBundle:Common:ad_300x250.html.twig' %}
			</div>
		</div>
	</div>
{% endblock %}