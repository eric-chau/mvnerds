{% extends 'MVNerdsSiteBundle::layout.html.twig' %}

{% block title %}{{ 'ResetPassword.title'|trans }} | MVNerds{% endblock %}

{% block css %}
	{{ parent() }}

	<link href="{{ asset('medias/css/site/reset-password-index.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block topbar %}
	{% set module = 'registration' %}
		
	{{ parent() }}
{% endblock %}
		
{% block breadcrumbs %}
	{{ parent() }}
	
	> <a href="{{ path('security_summoner_login') }}">{{ 'ResetPassword.breadcrumbs'|trans }}</a>
{% endblock %}

{% block main_content %}
	<div class="container main-container border-top">
		<div class="row-fluid">
			<div class="span8 left-content">
				{# PUBLICITÉ #}
				<div class="ad-container">
					<script type="text/javascript"><!--
					google_ad_client = "ca-pub-9866334543391692";
					/* MVNerds 2.0 Contenu principal */
					google_ad_slot = "9485929999";
					google_ad_width = 468;
					google_ad_height = 60;
					//-->
					</script>
					<script type="text/javascript"
					src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
					</script>
				</div>
				
				<h1>Changement de mot de passe</h1>
				
				<p>
					<strong>{{ user.getUsername() }}</strong>, votre demande de réinitialisation a bien été prise en compte. Nous vous invitons dès maintenant
					à choisir un nouveau mot de passe (ce dernier doit comporter au minimum 6 caractères).
				</p>
				
				<form action="{{ path('site_reset_password_save') }}" method="POST" {{ form_enctype(form) }}>
					<div class="form-errors">
						{{ form_errors(form) }}
					</div>
					
					<div class="field">
						{{ form_label(form.password) }}
						{{ form_widget(form.password) }}
						{{ form_errors(form.password) }}
					</div>
					
					<div class="field">
						{{ form_label(form.passwordConfirm) }}
						{{ form_widget(form.passwordConfirm) }}
						{{ form_errors(form.passwordConfirm) }}
					</div>
					
					<button class="btn green">Envoyer</button>
						
					{{ form_rest(form) }}
				</form>
			</div>
			
			<div class="span4 right-content">
				{# PUBLICITÉ #}
				<div class="sidebar-ad-container">
					<script type="text/javascript"><!--
					google_ad_client = "ca-pub-9866334543391692";
					/* Rectangle MVNerds 2.0 */
					google_ad_slot = "3578997199";
					google_ad_width = 300;
					google_ad_height = 250;
					//-->
					</script>
					<script type="text/javascript"
					src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
					</script>	
				</div>
			</div>
		</div>
	</div>
{% endblock %}
