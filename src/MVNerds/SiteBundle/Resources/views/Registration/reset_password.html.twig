{% extends 'MVNerdsSiteBundle::layout.html.twig' %}

{% block title %}{{ 'ResetPassword.title'|trans }} | MVNerds{% endblock %}

{% block css %}
	{{ parent() }}

	{% if app.environment == 'dev' %}
		<link href="{{ asset('medias/css/site/login-index.css') }}" rel="stylesheet" type="text/css">
	{% else %}

	{% endif %}
{% endblock %}

{% block topbar %}
	{% set module = 'registration' %}
		
	{{ parent() }}
{% endblock %}
		
{% block breadcrumbs %}
	{{ parent() }}
	
	> <a href="{{ path('security_summoner_login') }}">{{ 'ResetPassword.breadcrumbs'|trans }}</a>
{% endblock %}

{% block main_content %}
	<div class="container main-container border-top">
		<div class="row-fluid">
			<div class="span8 left-content">
				<h1>{{ 'ResetPassword.h1.title' }}</h1>
				
				{# PUBLICITÉ #}
				<div class="ad-container">
					<script type="text/javascript"><!--
					google_ad_client = "ca-pub-9866334543391692";
					/* MVNerds 2.0 Contenu principal */
					google_ad_slot = "9485929999";
					google_ad_width = 468;
					google_ad_height = 60;
					//-->
					</script>
					<script type="text/javascript"
					src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
					</script>
				</div>
				
				<div class="error">
					{% if form.vars.errors|length > 0 %}
						{% include ':Form:render_form_errors.html.twig' with {'item': form} %}
					{% endif %}
					{% include ':Form:render_form_errors.html.twig' with {'item': form.password} %}
					{% include ':Form:render_form_errors.html.twig' with {'item': form.passwordConfirm} %}
				</div>
				
				<form action="{{ path('launch_site_reset_password_save') }}" method="POST" {{ form_enctype(form) }}>
					<div class="row-fluid">
						<div class="span4">
							{{ form_label(form.password) }}
						</div>
						<div class="span4">
							{{ form_widget(form.password) }}
						</div>
						<div class="span4">
							
						</div>
					</div>
					
					<div class="row-fluid">
						<div class="span4">
							{{ form_label(form.passwordConfirm) }}
						</div>
						<div class="span4">
							{{ form_widget(form.passwordConfirm) }}
						</div>
						<div class="span4">
							<button>Envoyer</button>
						</div>
					</div>
				
					{{ form_rest(form) }}
				</form>
			</div>
			
			<div class="span4 right-content">
				{# PUBLICITÉ #}
				<div class="sidebar-ad-container">
					<script type="text/javascript"><!--
					google_ad_client = "ca-pub-9866334543391692";
					/* Rectangle MVNerds 2.0 */
					google_ad_slot = "3578997199";
					google_ad_width = 300;
					google_ad_height = 250;
					//-->
					</script>
					<script type="text/javascript"
					src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
					</script>	
				</div>
			</div>
		</div>
	</div>
{% endblock %}
