{% extends 'MVNerdsSiteBundle::layout.html.twig' %}

{% block title %}Réinitialisation de mot de passe terminée | MVNerds{% endblock %}

{% block topbar %}
	{% set module = 'registration' %}
		
	{{ parent() }}
{% endblock %}
		
{% block breadcrumbs %}
	{{ parent() }}
	
	> <a href="{{ path('site_summoner_registration') }}">Créer un compte MVNerds</a> > Changement de mot de passe terminé
{% endblock %}

{% block main_content %}
	<div class="container main-container border-top">
		
		{# PUBLICITÉ #}
		{% include 'MVNerdsSiteBundle:Common:ad_728x90.html.twig' %}
		
		<h1>Changement de mot de passe terminé</h1>

		<p>
			Invocateur {{ user.getUsername() }}, vous pouvez maintenant vous connecter à votre compte MVNerds avec votre nouveau mot de passe.
		</p>
		
		<div class="actions-buttons" style="text-align: center">
			Que voulez-vous faire ? <a href="{{ path('security_summoner_login') }}" class="btn large green">{{'account_activation.a.profile'|trans}}</a> <a href="{{ path('site_homepage', {'_locale': locale}) }}" class="btn large">{{'account_activation.a.index'|trans}}</a>
		</div>
	</div>
{% endblock %}
	