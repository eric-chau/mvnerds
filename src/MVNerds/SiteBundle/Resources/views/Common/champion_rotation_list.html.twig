<div class="label">
	{{'Champion-rotation.title' | trans }}<br />
	{{rotation.getTitle()}}
</div>

<div class="free-champions">
	{% for champion_rotation in rotation.getChampionRotations() %}
		<a href="{{path('champion_detail', {slug: champion_rotation.getChampion().getSlug()})}}">
			<img src="{{ asset('medias/images/champions/square36/' ~ champion_rotation.getChampion().getSlug() ~ '.png') }}" class="champion-square36" />
		</a>
	{% endfor %}
</div>
