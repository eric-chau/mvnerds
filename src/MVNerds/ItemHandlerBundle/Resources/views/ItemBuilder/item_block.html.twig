<li class="item {{item.getTagsToString()}} {{item.getGameModesToString()}} {% if item.getChampion() %}champion-specific{% endif %}" id="{{ item.getSlug() }}" data-placement="right" data-name="{{ item.getName() | lower }}" data-title="{{ item.getName()}}" data-champion="{% if item.getChampion() %}{{item.getChampion.getSlug()}}{% endif %}">
	
	<div class="portrait" data-slug="{{item.getSlug()}}" data-game-modes="{{item.getGameModesToString()}}" data-champion="{% if item.getChampion() %}{{item.getChampion.getSlug()}}{% endif %}">
		{#<div class="item-square {{ item.getSlug() }}"></div>#}
		<img draggable="false" class="item-image" src="{{ asset('images/items/' ~ item.getRiotCode() ~ '.png') }}" alt="image de l'item {{ item.getName() }}" />
		{#<div class="item-name">{{ item.getName() }}</div>#}
	</div>
	<div class="preview hide">
		{% include 'MVNerdsItemHandlerBundle:ItemBuilder:item_preview.html.twig' %}
	</div>
	<div class="loader hide">
		<img src="{{ asset('/images/commons/loader32.gif') }}" />
	</div>
</li>
