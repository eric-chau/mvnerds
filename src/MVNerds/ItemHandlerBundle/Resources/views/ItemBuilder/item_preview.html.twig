<div class="row-fluid preview-header {{ app.request.getLocale() }}" data-dissmiss="{{ item.getSlug() }}">
	<div class="span8">
		<h3>{{ item.getName() }}</h3>
	</div>
	<div class="span4">
		<p>
			 <strong>{{ item.getTotalCost() }}</strong> gold
		</p>
	</div>
</div>

<div class="row-fluid">
	<div class="span9">
		<ul>
			{% for itemPrimaryEffect in item.getItemPrimaryEffects()%}
				<li>{{itemPrimaryEffect.getValue()}} {{itemPrimaryEffect.getPrimaryEffect().getLabel()}}</li>
			{% endfor %}
			{% for itemSecondaryEffect in item.getItemSecondaryEffects()%}
				<li>{{itemSecondaryEffect.getDescription()}}</li>
			{% endfor %}
		</ul>
	</div>
	<div class="span3 right-side">
		<div class="item-portrait">
			<img draggable="false" class="item-image-preview" src="{{ asset('images/items/' ~ item.getRiotCode() ~ '.png') }}" alt="image de l'item {{ item.getName() }}" />
		</div>
		<a href="#" class="btn-action-item-preview btn-add-to-list" data-item-slug="{{ item.getSlug() }}"><strong>Ajouter</strong> Ã  la liste</a>
	</div>
</div>