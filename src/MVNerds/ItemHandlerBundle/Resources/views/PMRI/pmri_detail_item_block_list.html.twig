<div class="item-block-container">
	<h2>{{ 'pmri_detail.items_blocks.title'|trans }}</h2>
	{% for item_block in item_build.getItemBuildBlocks() %}
		{% if loop.index0 % 2 == 0 %}
			<div class="row-fluid">
		{% endif %}
					
		{% include 'MVNerdsItemHandlerBundle:PMRI:pmri_detail_item_block_row.html.twig' with {'item_block': item_block} %}
		
		{% if loop.index0 % 2 != 0 or loop.last %}
			</div>
		{% endif %}
	{%endfor%}
</div>
