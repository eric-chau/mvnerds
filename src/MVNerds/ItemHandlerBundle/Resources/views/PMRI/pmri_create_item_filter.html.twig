<li id="filters-block" class="dropdown action link" >	
	<a href="#" class="dropdown-toggle action-button-link btn" data-toggle="dropdown" id="item-drop-filter-list" role="button">
		<i class="icon-cogs icon-white"></i>
		<span class="action-label">{{'Actionsbar.Filter.title'|trans}}</span>
	</a>
	<ul id="item-filters-list" class="dropdown-menu" role="menu" aria-labelledby="item-drop-filters-list">
		<li class="list-header">{{'Actionsbar.Item.Filter.Dropdown.title'|trans}}</li>
		<div class="row-fluid row-filters">
			<div class="span6">
				<ul class="tags-group">
					<li class="nav-header">{{'items_filter_type.attack'|trans}}</li>
					{% for tag in tags['attack']%}
						<li>
							<a href="#" class="filter-link" data-option-value="{{tag.getSlug()}}"><i class=" icon-ok-sign"></i>{{tag.setLocale(locale).getLabel()}}</a>
						</li>
					{% endfor %}
				</ul>
				<ul class="tags-group">
					<li class="nav-header">{{'items_filter_type.defense'|trans}}</li>
					{% for tag in tags['defense']%}
						<li>
							<a href="#" class="filter-link" data-option-value="{{tag.getSlug()}}"><i class=" icon-ok-sign"></i>{{tag.setLocale(locale).getLabel()}}</a>
						</li>
					{% endfor %}
				</ul>
					
			</div>
				
			<div class="span6">
				<ul class="tags-group">
					<li class="nav-header">{{'items_filter_type.magic'|trans}}</li>
					{% for tag in tags['magic']%}
						<li>
							<a href="#" class="filter-link" data-option-value="{{tag.getSlug()}}"><i class=" icon-ok-sign"></i>{{tag.setLocale(locale).getLabel()}}</a>
						</li>
					{% endfor %}
				</ul>
				<ul class="tags-group">
					<li class="nav-header">{{'items_filter_type.other'|trans}}</li>
					{% for tag in tags['other']%}
						<li>
							<a href="#" class="filter-link" data-option-value="{{tag.getSlug()}}"><i class=" icon-ok-sign"></i>{{tag.setLocale(locale).getLabel()}}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		<div class="row-fluid div-action-buttons">
			<div class="span12">
				<li id="item-li-clean-filter" class="li-filter-action li-filter-action-left hide">
					<a id="btn-clean-filter" href="#"class="filter-action disabled">
						{{'Actionsbar.Filter.Dropdown.clean'|trans}}
						<i class="icon-trash"></i>
					</a>
				</li>
			</div>
		</div>
	</ul>
</li>