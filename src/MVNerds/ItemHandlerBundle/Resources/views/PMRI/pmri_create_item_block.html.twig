{% set gameModesToString =  item.getGameModesToString()%}

<li class="item {{item.getTagsToString()}} {{gameModesToString}} {% if item.getChampion() %}champion-specific{% endif %}" id="{{ item.getSlug() }}" data-placement="right" data-name="{{ item.getName() | lower }}" data-title="{{ item.getName()}}" data-code="{{ item.getRiotCode()}}" data-slug="{{item.getSlug()}}" data-champion="{% if item.getChampion() %}{{item.getChampion.getSlug()}}{% endif %}">
	<div class="portrait" data-slug="{{item.getSlug()}}" data-title="{{ item.getName()}}" data-code="{{item.getRiotCode()}}" data-game-modes="{{gameModesToString}}" data-champion="{% if item.getChampion() %}{{item.getChampion.getSlug()}}{% endif %}">
		<img draggable="false" class="item-image" src="{{ asset('images/items/' ~ item.getRiotCode() ~ '.png') }}" alt="image de l'item {{ item.getName() }}" />
	</div>
</li>
