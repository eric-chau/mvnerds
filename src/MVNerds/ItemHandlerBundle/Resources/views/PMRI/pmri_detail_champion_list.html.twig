<div class="champions-container">
	<h2>Champion(s)</h2>
	<div class="champions-list">
		{% if item_build.getChampionItemBuilds()|length > 1 %}
			{% for champion_item_build in item_build.getChampionItemBuilds() %}
				{% set champion = champion_item_build.getChampion() %}
				<div class="champion" id="{{champion.getSlug()}}">
					<img src="{{ asset('medias/images/champions/square36/' ~ champion.getSlug() ~ '.png') }}" class="champion-square36 tooltip-anchor" data-placement="top" data-title="{{ champion.getName()}}" />
					<div ></div>
				</div>
			{% endfor %}
		{% else %}
			{% for champion_item_build in item_build.getChampionItemBuilds() %}
				{% set champion = champion_item_build.getChampion() %}
				<div class="champion" id="{{champion.getSlug()}}">
					<img src="{{ asset('medias/images/champions/square/' ~ champion.getSlug() ~ '.png') }}" class="tooltip-anchor" data-placement="top" data-title="{{ champion.getName()}}" />
				</div>
			{% endfor %}
		{% endif %}
	</div>
</div>
